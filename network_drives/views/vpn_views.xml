<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VPN Credential Tree View -->
    <record id="view_vpn_credential_tree" model="ir.ui.view">
        <field name="name">vpn.credential.tree</field>
        <field name="model">vpn.credential</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="vpn_type"/>
                <field name="server"/>
                <field name="domain"/>
                <field name="username"/>
                <field name="state"/>
                <field name="last_connection"/>
            </tree>
        </field>
    </record>

    <!-- VPN Credential Form View -->
    <record id="view_vpn_credential_form" model="ir.ui.view">
        <field name="name">vpn.credential.form</field>
        <field name="model">vpn.credential</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="vpn_type"/>
                            <field name="server"/>
                            <field name="port"/>
                        </group>
                        <group>
                            <field name="domain"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Connection Info">
                        <field name="last_connection"/>
                        <field name="last_error"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- VPN Connection Actions -->
    <record id="action_vpn_credential" model="ir.actions.act_window">
        <field name="name">VPN Credentials</field>
        <field name="res_model">vpn.credential</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_vpn_management"
              name="VPN Management"
              parent="network_drives.menu_root"
              sequence="20"/>

    <menuitem id="menu_vpn_credential"
              name="VPN Credentials"
              parent="menu_vpn_management"
              action="action_vpn_credential"
              sequence="10"/>
</odoo>